
    <% include ./partials/header %>
        <div class="container" id="inbox-container">
          <div class="btn">
            <a href="/inbox/unread">Unread</button></a>
          </div>
          <div class="btn">
            <a href="/inbox/achive">Archive</a>
          </div>
          <div class="btn">
            <a href="/inbox/completed">Completed</a>
          </div>
        </div>
        <br><br>
        <!-- Responsive grid -->
        <div class="container">
          <div class="row">
    <% for(var i = 0; i<result.length; i++){ %>
              <div class="col-4 inbox">
                <h4><%= result[i].name %></h4>
                <br>
                <h6><%= result[i].email %></h6>
                <p class=""><%= result[i].content %></p>
                <br>
                <!-- Buttons -->
                <form action="/inbox/unread/achive/<%=result[i].id%>" method="post">
                  <button class="inboxBtns" type="submit" name="button">Save</button>
                </form>
                <form action="/inbox/unread/delete/<%=result[i].id%>" method="get">
                  <button class="inboxBtns" type="submit" name="button">Delete</button>
                </form>
              </div>
              <% } %>
          </div>
        </div>
