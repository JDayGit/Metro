<% include ./partials/header %>
  <!-- Header and Nav bar -->



  <!-- Carousel Background -->

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->

    <ol class="carousel-indicators">
      <% for(var i = 0; i<project.length; i++){ %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= project[i].id%>" class=""></li>
        <% } %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% for(var i = 0; i<project.length; i++){ %>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= project[i].img_url %>" data-color="violet" alt="Image">
          <div class="carousel-caption d-md-block  ">
            <% if (isBoss) {%>
            <!-- Admin Delete Project -->
            <a href="/projects/del/<%=project[i].id%>">
              <button class="deleteBtn">
                Delete
            </button></a>
            <%}%>
            <div class="projectCaption">
            <h5 class="caption">
              <%= project[i].name %></h5>
            <span class=""> <%= project[i].address
          %></span></h2>
            <p class="">
              <%= project[i].description %>
            </p>
          </div>
        </div>
      </div>
        <% } %>
    </div>


  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
<span class="carousel-control-prev-icon" aria-hidden="true"></span>
<span class="sr-only">Previous</span>
</a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
<span class="carousel-control-next-icon" aria-hidden="true"></span>
<span class="sr-only">Next</span>
</a>
  </div>

  <!-- Background carousel ends -->




  <!--Bottom Banner -->
  <% include ./partials/bottomBanner %>

<!-- Google Maps -->
<div class="row">
  <div class="col-12">
<h6 id="currentandrecent">Current and Recent Projects</h6>
</div>
</div>
  <div id="map"></div>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4kCsomfpNUDQH2ea9JWK-xfYoZuawXeM&callback=initMap"></script>
  <script src="/maps/projectmap.js" defer></script>

  <!-- Footer -->
    <% include ./partials/footer %>
      <script type="text/javascript">
        var $item = $('.carousel-item');
        var $wHeight = $(window).height();
        $item.eq(0).addClass('active');
        $item.height($wHeight);
        $item.addClass('full-screen');
        $('.carousel img').each(function() {
          var $src = $(this).attr('src');
          var $color = $(this).attr('data-color');
          $(this).parent().css({
            'background-image': 'url(' + $src + ')',
            'background-color': $color
          });
          $(this).remove();
        });
        $(window).on('resize', function() {
          $wHeight = $(window).height();
          $item.height($wHeight);
        });
        $('.carousel').carousel({
          interval: 6000,
          pause: "false"
        });
      </script>
